<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mybatis.test.dao.UserDao">

    <resultMap id="user" type="User">
        <id column="user_id" property="userId" jdbcType="INTEGER" javaType="Long" ></id>
        <result column="user_name" property="userName" jdbcType="VARCHAR" javaType="String"></result>
        <result column="user_age" property="userAge" jdbcType="INTEGER" javaType="Integer"></result>

    </resultMap>

    <select id="getUsers" resultMap="user">
        SELECT * FROM `user`
    </select>

    <select id="selectByPrimaryKey" parameterType="Long" resultMap="user">
         SELECT * FROM `user`
         <where>
             AND  user_id = #{id}
         </where>
    </select>
</mapper>